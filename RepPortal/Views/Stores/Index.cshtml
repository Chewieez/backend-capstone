@model IEnumerable<RepPortal.Models.StoreViewModels.StoreListViewModel>

@{
    ViewData["Title"] = "Stores In Your Territory";
}

<h2>Stores In Your Territory</h2>

@if (User.IsInRole("Administrator"))
{
    <div class="col-md-offset-5 col-md-7">
    <p>
        <a asp-action="Create">Create A New Store Listing</a>
    </p>
        @using (Html.BeginForm("UploadCsv", "Stores", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="attachment">Add stores via CSV File</label>
                <label class="btn btn-default btn-file">
                    <input type="file" name="attachmentcsv" id="attachmentcsv" hidden>
                </label>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
            <hr />
        }
    </div>
}

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search by Name or Status: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Follow Up?</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">@Html.DisplayNameFor(model => model.Store.Status)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Store.Name)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.WebsiteURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.ContactName)
            </th>
            @if (User.IsInRole("Administrator"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Store.SalesRep)
                </th>
            }
            @if (@Html.DisplayNameFor(model => model.Store.Status) == "Closed")
            {
                <th>
                    @Html.DisplayNameFor(model => model.Store.DateClosed)
                </th>
            }
            <th>Notes</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrderDateSortParm"]">@Html.DisplayNameFor(model => model.Store.LastOrderDate)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Flag1.Flag.Name)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Status.Name)

                    <img src='@string.Format("/images/map-icons/Shopping_Bag_{0}.svg", item.Store.StatusId)' />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Name)
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.Store.StreetAddress)</div>

                    <div>
                        @Html.DisplayFor(modelItem => item.Store.City)
                        @Html.DisplayFor(modelItem => item.Store.State.Name)
                        @Html.DisplayFor(modelItem => item.Store.Zipcode)
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.PhoneNumber)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.Store.WebsiteURL)" target="_blank">@Html.DisplayFor(modelItem => item.Store.WebsiteURL)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.ContactName)
                </td>
                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Store.SalesRep.FirstName) @Html.DisplayFor(modelItem => item.Store.SalesRep.LastName)
                    </td>
                }
                @if (@Html.DisplayNameFor(model => model.Store.Status) == "Closed")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Store.DateClosed)
                    </td>
                }
                <td>
                    <a asp-action="Details" asp-route-id="@item.Store.StoreId">Notes</a>
                </td>           
                <td>
                    @Html.DisplayFor(modelItem => item.Store.LastOrderDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Store.StoreId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Store.StoreId">Details</a> |
                    @if (User.IsInRole("Administrator"))
                    {
                    <a asp-action="Delete" asp-route-id="@item.Store.StoreId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


