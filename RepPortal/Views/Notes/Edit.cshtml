@model RepPortal.Models.NotesViewModels.CreateNoteViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.NoteId" />

            @*
        <input asp-for="ToUser" class="form-control" />
        <span asp-validation-for="ToUser" class="text-danger"></span>*@
            <label class="control-label">To</label>
            @Html.DropDownListFor(model => model.ToUserId,
                            ViewBag.Users as IEnumerable<SelectListItem>, "Select Recipient", new { @class = "form-control" })

            <div class="form-group">
                <label asp-for="Note.Content" class="control-label"></label>
                <textarea asp-for="Note.Content" rows="5" class="form-control" placeholder="Enter content here... "></textarea>
                <span asp-validation-for="Note.Content" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Note.DateCreated" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
